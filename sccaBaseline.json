{
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.5.0",
        "id": "urn:uuid:b92236ad-a677-4574-8bce-7d1487aeb62f",
        "label": "Management",
        "remark": "Management VIPs",
        "Common": {
            "class": "Tenant",
            "Shared": {
                "class": "Application",
                "template": "shared",
                      "ip_reputation_drop": {
                "class": "iRule",
                "iRule": "when CLIENT_ACCEPTED {\nif {[llength [IP::reputation [IP::client_addr]]] != 0}{\nlog local0. \"IP Intelligence for IP address [IP::client_addr]:[IP::reputation [IP::client_addr]]\"\ndrop\n}\n}\n"
              }
            }
        },
        "mgmt": {
            "class": "Tenant",
            "jumphost_mgmt_ssh": {
                "class": "Application",
                "template": "generic",
                "jumphost_mgmt_ssh": {
                    "class": "Service_TCP",
                    "iRules": ["/Common/Shared/ip_reputation_drop"],
                    "virtualAddresses": [
                        "ReplaceWithVIP1"
                    ],
                    "virtualPort": 22,
                    "pool": "jumphost_ssh_pool"
                },
                "jumphost_ssh_pool": {
                    "class": "Pool",
                    "monitors": [
                        "tcp-half-open"
                    ],
                    "members": [
                        {
                            "servicePort": 22,
                            "serverAddresses": [
                                "ReplaceWithJumpHostIP"
                            ]
                        }
                    ]
                }
            },  
            "jumphost_mgmt_https": {
                "class": "Application",
                "template": "generic",
                "bigip1_mgmt_https": {
                    "class": "Service_TCP",
                    "iRules": ["/Common/Shared/ip_reputation_drop"],
                    "virtualAddresses": [
                        "ReplaceWithVIP1"
                    ],
                    "virtualPort": 443,
                    "pool": "jumphost_https_pool"
                },
                "jumphost_https_pool": {
                    "class": "Pool",
                    "monitors": [
                        "tcp-half-open"
                    ],
                    "members": [
                        {
                            "servicePort": 443,
                            "serverAddresses": [
                                "ReplaceWithJumpHostIP"
                            ]
                        }
                    ]
                }
            },
            "jumphost_mgmt_http": {
                "class": "Application",
                "template": "generic",
                "bigip1_mgmt_https": {
                    "class": "Service_TCP",
                    "iRules": ["/Common/Shared/ip_reputation_drop"],
                    "virtualAddresses": [
                        "ReplaceWithVIP1"
                    ],
                    "virtualPort": 443,
                    "pool": "jumphost_http_pool"
                },
                "jumphost_http_pool": {
                    "class": "Pool",
                    "monitors": [
                        "tcp-half-open"
                    ],
                    "members": [
                        {
                            "servicePort": 443,
                            "serverAddresses": [
                                "ReplaceWithJumpHostIP"
                            ]
                        }
                    ]
                }
            }
	}
    }
}
