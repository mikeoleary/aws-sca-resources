{
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.5.0",
        "id": "urn:uuid:b92236ad-a677-4574-8bce-7d1487aeb62f",
        "label": "Management",
        "remark": "Management VIPs",
        "Common": {
            "class": "Tenant",
            "Shared": {
                "class": "Application",
                "template": "shared",
                      "ip_reputation_drop": {
                "class": "iRule",
                "iRule": "when CLIENT_ACCEPTED {\nif {[llength [IP::reputation [IP::client_addr]]] != 0}{\nlog local0. \"IP Intelligence for IP address [IP::client_addr]:[IP::reputation [IP::client_addr]]\"\ndrop\n}\n}\n"
              }
            }
        },
        "mgmt": {
            "class": "Tenant",
            "bigip1_mgmt_ssh": {
                "class": "Application",
                "template": "generic",
                "mgmt_ssh": {
                    "class": "Service_TCP",
                    "iRules": ["/Common/Shared/ip_reputation_drop"],
                    "virtualAddresses": [
                        "ReplaceWithVIP1"
                    ],
                    "virtualPort": 22,
                    "pool": "bigip1_ssh_pool"
                },
                "bigip1_ssh_pool": {
                    "class": "Pool",
                    "monitors": [
                        "tcp-half-open"
                    ],
                    "members": [
                        {
                            "servicePort": 22,
                            "serverAddresses": [
                                "ReplaceWithBigIP1MgmtIP"
                            ]
                        }
                    ]
                }
            },  
            "bigip2_mgmt_ssh": {
                "class": "Application",
                "template": "generic",
                "mgmt_ssh": {
                    "class": "Service_TCP",
                    "iRules": ["/Common/Shared/ip_reputation_drop"],
                    "virtualAddresses": [
                        "ReplaceWithVIP2"
                    ],
                    "virtualPort": 22,
                    "pool": "bigip2_ssh_pool"
                },
                "bigip2_ssh_pool": {
                    "class": "Pool",
                    "monitors": [
                        "tcp-half-open"
                    ],
                    "members": [
                        {
                            "servicePort": 22,
                            "serverAddresses": [
                                "ReplaceWithBigIP2MgmtIP"
                            ]
                        }
                    ]
                }
            }, 
            "bigip1_mgmt_https": {
                "class": "Application",
                "template": "generic",
                "mgmt_https": {
                    "class": "Service_TCP",
                    "iRules": ["/Common/Shared/ip_reputation_drop"],
                    "virtualAddresses": [
                        "ReplaceWithVIP1"
                    ],
                    "virtualPort": 443,
                    "pool": "https_pool"
                },
                "https_pool": {
                    "class": "Pool",
                    "monitors": [
                        "tcp-half-open"
                    ],
                    "members": [
                        {
                            "servicePort": 443,
                            "serverAddresses": [
                                "ReplaceWithBigIP1MgmtIP"
                            ]
                        }
                    ]
                }
            },
            "bigip2_mgmt_https": {
                "class": "Application",
                "template": "generic",
                "mgmt_https": {
                    "class": "Service_TCP",
                    "iRules": ["/Common/Shared/ip_reputation_drop"],
                    "virtualAddresses": [
                        "ReplaceWithVIP2"
                    ],
                    "virtualPort": 443,
                    "pool": "https_pool"
                },
                "https_pool": {
                    "class": "Pool",
                    "monitors": [
                        "tcp-half-open"
                    ],
                    "members": [
                        {
                            "servicePort": 443,
                            "serverAddresses": [
                                "ReplaceWithBigIP2MgmtIP"
                            ]
                        }
                    ]
                }
            },
            "bigip1_mgmt_http": {
                "class": "Application",
                "template": "generic",
                "mgmt_http": {
                    "class": "Service_HTTP",
                    "iRules": ["health_irule"],
                    "virtualAddresses": [
                        "0.0.0.0"
                    ],
                    "virtualPort": 80
                },
                "health_irule": {
                "class": "iRule",
                "iRule": "when HTTP_REQUEST {\n   HTTP::respond 200 content {\n      <html>\n         <head>\n            <title>Health Check</title>\n         </head>\n         <body>\n            System is online.\n         </body>\n      </html>\n   }\n}"
				}
			},
            "bigip2_mgmt_http": {
                "class": "Application",
                "template": "generic",
                "mgmt_http": {
                    "class": "Service_HTTP",
                    "iRules": ["health_irule"],
                    "virtualAddresses": [
                        "10.0.0.1"
                    ],
                    "virtualPort": 80
                },
                "health_irule": {
                "class": "iRule",
                "iRule": "when HTTP_REQUEST {\n   HTTP::respond 200 content {\n      <html>\n         <head>\n            <title>Health Check</title>\n         </head>\n         <body>\n            System is online.\n         </body>\n      </html>\n   }\n}"
				}
            }
		}
	}
}
